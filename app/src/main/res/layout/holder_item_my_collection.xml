<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/imagePhotoInItemMyCollection"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:scaleType="centerCrop"
        android:contentDescription="@string/content_description"/>
    <TextView
        android:id="@+id/textTitleInItemMyCollection"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/imagePhotoInItemMyCollection"
        android:gravity="center_vertical"
        android:textStyle="bold"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_toStartOf="@+id/imageSaveInItemMyCollection"/>
    <TextView
        android:id="@+id/textAddressInItemMyCollection"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center_vertical"
        android:layout_marginStart="16dp"
        android:layout_below="@+id/textTitleInItemMyCollection"
        android:layout_toStartOf="@+id/imageSaveInItemMyCollection"
        android:maxLines="1"
        android:ellipsize="end"/>
    <TextView
        android:id="@+id/textSubInItemMyCollection"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_below="@+id/textAddressInItemMyCollection"
        android:layout_alignStart="@+id/textTitleInItemMyCollection"
        android:layout_alignEnd="@+id/textTitleInItemMyCollection"
        android:gravity="center_vertical"
        android:textSize="12sp"/>
    <View
        android:id="@+id/viewBarInItemMyCollection"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_below="@+id/imagePhotoInItemMyCollection" />
    <View
        android:id="@+id/viewBarBottomInMyCollection"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorWhiteForD9D9D9"
        android:layout_below="@+id/viewBarInItemMyCollection"/>
    <ImageView
        android:id="@+id/imageRemoveInItemMyCollection"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:contentDescription="@string/content_description"
        android:src="@drawable/mark_on_v14"
        android:padding="8dp"
        android:layout_alignTop="@+id/textSubInItemMyCollection"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="8dp"/>
    <ImageView
        android:id="@+id/imageSaveInItemMyCollection"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:contentDescription="@string/content_description"
        android:src="@drawable/add_v1_1"
        android:layout_alignTop="@+id/imageRemoveInItemMyCollection"
        android:layout_toStartOf="@+id/imageRemoveInItemMyCollection"
        android:layout_marginEnd="8dp"
        android:padding="8dp"/>
</RelativeLayout>
