<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyCodeActivity"
    android:background="@color/colorGreenFor96E7A5">
    <TextView
        android:id="@+id/textTitleInMyCodeA"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="我的條碼"
        android:textSize="16sp"
        android:textColor="@color/colorWhiteForFFFFFF"
        android:gravity="center"
        android:layout_marginStart="16dp"/>

    <View
        android:id="@+id/viewPepperInMyCodeA"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="50dp"
        android:background="@color/colorWhiteForFFFFFF"/>

    <TextView
        android:id="@+id/textCashInMyCodeA"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/viewPepperInMyCodeA"
        android:layout_centerHorizontal="true"
        android:text="碳幣金額  770"
        android:textSize="26sp"
        android:layout_marginTop="60dp"/>

    <ImageView
        android:id="@+id/imgCodeInMyCodeA"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_centerInParent="true"/>
</RelativeLayout>