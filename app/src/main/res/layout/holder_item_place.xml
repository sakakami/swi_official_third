<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:focusableInTouchMode="true">
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerInItemPlace"
        android:layout_width="match_parent"
        android:layout_height="120dp"/>
    <TextView
        android:id="@+id/textTitleInItemPlace"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@+id/recyclerInItemPlace"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:gravity="center_vertical"
        android:text="Title"
        android:textStyle="bold"
        android:textSize="20sp"/>
    <RelativeLayout
        android:id="@+id/layoutAInItemPlace"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_below="@+id/textTitleInItemPlace">
        <TextView
            android:id="@+id/textRatingAInItemPlace"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:gravity="center"
            android:text="4.0" />
        <android.support.v7.widget.AppCompatRatingBar
            android:id="@+id/ratingAInItemPlace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Widget.AppCompat.RatingBar.Small"
            android:layout_toEndOf="@+id/textRatingAInItemPlace"
            android:layout_marginStart="4dp" />
        <TextView
            android:id="@+id/textCountAInItemPlace"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_toEndOf="@+id/ratingAInItemPlace"
            android:layout_marginStart="4dp"
            android:text="(124)"
            android:gravity="center_vertical"/>
        <TextView
            android:id="@+id/textTypeAInItemPlace"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_below="@+id/textRatingAInItemPlace"
            android:gravity="center_vertical"
            android:text="Coffee Shop · 0.3mi"/>
        <TextView
            android:id="@+id/textStatusAInItemPlace"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:gravity="center_vertical"
            android:layout_below="@+id/textTypeAInItemPlace"
            android:textColor="@color/colorRed"
            android:text="Closed"
            android:layout_marginBottom="8dp"/>
        <TextView
            android:id="@+id/textTimeAInItemPlace"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_toEndOf="@+id/textStatusAInItemPlace"
            android:layout_alignTop="@+id/textStatusAInItemPlace"
            android:text=" · Opens 9:00 AM Tue"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/layoutBInItemPlace"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textTitleInItemPlace"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="4dp"
        android:visibility="gone">
        <ImageView
            android:id="@+id/imageLicenceBInItemPlace"
            android:layout_width="90dp"
            android:layout_height="20dp"
            android:contentDescription="@string/content_description"
            app:srcCompat="@drawable/by_nc_sa_cclicense" />
        <TextView
            android:id="@+id/textLicenceBInItemPlace"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_alignTop="@+id/imageLicenceBInItemPlace"
            android:layout_toEndOf="@+id/imageLicenceBInItemPlace"
            android:layout_marginStart="8dp"
            android:text="CC BY license"/>
        <TextView
            android:id="@+id/textTypeBInItemPlace"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:gravity="center_vertical"
            android:layout_below="@+id/imageLicenceBInItemPlace"
            android:text="Labrador Retriever"
            android:layout_marginTop="4dp"/>
        <TextView
            android:id="@+id/textOldBInItemPlace"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:gravity="center_vertical"
            android:layout_below="@+id/textTypeBInItemPlace"
            android:text="Adult · 1.3mi"/>
        <TextView
            android:id="@+id/textPlaceBInItemPlace"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:gravity="center_vertical"
            android:layout_below="@+id/textOldBInItemPlace"
            android:text="Guam Animals In Need"
            android:layout_marginBottom="8dp"/>
    </RelativeLayout>
    <ImageView
        android:id="@+id/imageSaveInItemPlace"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/textTitleInItemPlace"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        android:contentDescription="@string/content_description"
        app:srcCompat="@drawable/sub_2_v1_1" />
</RelativeLayout>
