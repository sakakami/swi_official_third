<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView
        android:id="@+id/textTitleCashFlow"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:textSize="26sp"
        android:textStyle="bold"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerCashFlow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textTitleCashFlow" />
    <View
        android:id="@+id/viewPointCashFlow"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:layout_below="@+id/recyclerCashFlow"
        android:layout_marginTop="8dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/textRightCashFlow"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_toEndOf="@+id/viewPointCashFlow"
        android:layout_alignTop="@+id/viewPointCashFlow"
        android:layout_marginStart="40dp"
        android:gravity="center"
        android:textSize="16sp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/bg_blue_full"
        android:textColor="@color/colorWhiteForFFFFFF"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/textLeftCashFlow"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/viewPointCashFlow"
        android:layout_toStartOf="@+id/viewPointCashFlow"
        android:layout_marginEnd="40dp"
        android:gravity="center"
        android:textSize="16sp"
        android:layout_marginBottom="8dp"
        android:textColor="@color/colorWhiteForFFFFFF"
        android:background="@drawable/bg_blue_full"
        android:visibility="gone"/>
</RelativeLayout>
