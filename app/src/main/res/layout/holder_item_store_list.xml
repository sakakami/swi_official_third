<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imagePhotoInItemStoreList"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:scaleType="center"
        app:srcCompat="@drawable/none_1" />
    <TextView
        android:id="@+id/textTitleInItemStoreList"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_toEndOf="@+id/imagePhotoInItemStoreList"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:gravity="center_vertical"
        android:textSize="16sp"/>
    <TextView
        android:id="@+id/textContentInItemStoreList"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_toEndOf="@+id/imagePhotoInItemStoreList"
        android:layout_below="@+id/textTitleInItemStoreList"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:gravity="center_vertical"
        android:textSize="14sp"/>
    <View
        android:id="@+id/viewPepperInItemStoreList"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/bg_gray_2_surround"/>
</RelativeLayout>
