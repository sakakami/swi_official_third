<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layoutItemNineEbike"
    android:background="@color/colorBlackForTranslucent"
    android:visibility="gone">
    <View
        android:id="@+id/viewBarInItemNineEbike"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_centerInParent="true"
        android:layout_marginEnd="32dp"
        android:layout_marginStart="32dp"
        android:background="@drawable/bg_white_message_map_full"/>
    <TextView
        android:id="@+id/textTitleInItemNineEbike"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_alignTop="@+id/viewBarInItemNineEbike"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="@string/ebike_select_title"
        android:textStyle="bold"
        android:textSize="26sp"/>
    <TextView
        android:id="@+id/textCenterInItemNineEbike"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_below="@+id/textTitleInItemNineEbike"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:textSize="18sp"
        android:maxLines="1"/>
    <TextView
        android:id="@+id/textCenterSubInItemNineEbike"
        android:layout_width="80dp"
        android:layout_height="20dp"
        android:layout_below="@+id/textCenterInItemNineEbike"
        android:layout_alignStart="@+id/textCenterInItemNineEbike"
        android:gravity="center"
        android:text="@string/ebike_distance"/>
    <TextView
        android:id="@+id/textRightInItemNineEbike"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_toEndOf="@+id/textCenterInItemNineEbike"
        android:layout_alignTop="@+id/textCenterInItemNineEbike"
        android:layout_marginStart="16dp"
        android:gravity="center"
        android:textSize="18sp"
        android:maxLines="1"/>
    <TextView
        android:id="@+id/textRightSubInItemNineEbike"
        android:layout_width="80dp"
        android:layout_height="20dp"
        android:layout_below="@+id/textRightInItemNineEbike"
        android:layout_alignStart="@+id/textRightInItemNineEbike"
        android:gravity="center"
        android:text="@string/ebike_cost"/>
    <TextView
        android:id="@+id/textLeftInItemNineEbike"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_alignTop="@+id/textCenterInItemNineEbike"
        android:layout_toStartOf="@+id/textCenterInItemNineEbike"
        android:layout_marginEnd="16dp"
        android:gravity="center"
        android:textSize="18sp"
        android:maxLines="1"/>
    <TextView
        android:id="@+id/textLeftSubInItemNineEbike"
        android:layout_width="80dp"
        android:layout_height="20dp"
        android:layout_below="@+id/textRightInItemNineEbike"
        android:layout_alignStart="@+id/textLeftInItemNineEbike"
        android:gravity="center"
        android:text="@string/ebike_power"/>
    <RadioGroup
        android:id="@+id/radioGroupInItemNineEbike"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textCenterSubInItemNineEbike"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp">
        <RadioButton
            android:id="@+id/radioOneInItemNineEbike"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ebike_nchu_801"
            android:textSize="32sp"
            android:textStyle="bold"
            android:gravity="center_vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:textColor="@color/colorGray"/>
        <RadioButton
            android:id="@+id/radioTwoInItemNineEbike"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ebike_nchu_802"
            android:textSize="32sp"
            android:textStyle="bold"
            android:gravity="center_vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:textColor="@color/colorGray"/>
        <RadioButton
            android:id="@+id/radioThreeInItemNineEbike"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ebike_nchu_803"
            android:textSize="32sp"
            android:textStyle="bold"
            android:gravity="center_vertical"
            android:paddingEnd="16dp"
            android:paddingStart="16dp"
            android:textColor="@color/colorGray"/>
    </RadioGroup>
    <TextView
        android:id="@+id/textRightBottomInItemNineEbike"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_below="@+id/radioGroupInItemNineEbike"
        android:layout_marginTop="32dp"
        android:layout_alignEnd="@+id/viewBarInItemNineEbike"
        android:layout_marginEnd="16dp"
        android:background="@color/colorBlack"
        android:text="@string/ebike_confirm"
        android:textColor="@color/colorWhite"
        android:gravity="center"
        android:textSize="18sp"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/textLeftBottomInItemNineEbike"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/textRightBottomInItemNineEbike"
        android:layout_alignStart="@+id/viewBarInItemNineEbike"
        android:layout_marginStart="16dp"
        android:text="@string/ebike_cancel"
        android:textSize="18sp"
        android:gravity="center"
        android:textStyle="bold"
        android:background="@drawable/bg_white_buttom_surround"/>
</RelativeLayout>
