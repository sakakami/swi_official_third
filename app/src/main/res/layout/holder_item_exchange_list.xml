<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imagePhotoInItemExchangeList"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:scaleType="center"
        app:srcCompat="@drawable/none_1" />
    <TextView
        android:id="@+id/textNameInItemExchangeList"
        android:layout_width="170dp"
        android:layout_height="30dp"
        android:layout_below="@+id/imagePhotoInItemExchangeList"
        android:gravity="center_vertical"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"/>
    <TextView
        android:id="@+id/textCountInItemExchangeList"
        android:layout_width="170dp"
        android:layout_height="30dp"
        android:layout_below="@+id/textNameInItemExchangeList"
        android:gravity="center_vertical"
        android:paddingEnd="8dp"
        android:paddingStart="8dp"/>
    <View
        android:id="@+id/viewPepperInItemExchangeList"
        android:layout_width="170dp"
        android:layout_height="230dp"
        android:background="@drawable/bg_gray_2_surround"/>
</RelativeLayout>
