<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.VPhotoView"
    android:background="@color/colorBlackFor000000">
    <TextView
        android:id="@+id/textBackInPhotoView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:textColor="@color/colorWhiteForFBFBFB"
        android:gravity="center"
        android:text="@string/global_back"/>
    <ImageView
        android:id="@+id/imageCameraInPhotoView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:src="@drawable/camera_2_v1_1"
        android:contentDescription="@string/content_description"
        android:padding="16dp"/>
    <TextView
        android:id="@+id/textTitleInPhotoView"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:gravity="center"
        android:textColor="@color/colorWhiteForFBFBFB"
        android:text="Photos"/>
    <android.support.v4.view.ViewPager
        android:id="@+id/viewPagerInPhotoView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/textTitleInPhotoView"/>
</RelativeLayout>