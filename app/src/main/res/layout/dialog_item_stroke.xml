<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/imageNewInItemStroke"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:contentDescription="@string/content_description"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:src="@drawable/add_v1_1"
        android:padding="8dp"/>
    <TextView
        android:id="@+id/textNewInItemStroke"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignTop="@+id/imageNewInItemStroke"
        android:layout_toEndOf="@+id/imageNewInItemStroke"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:gravity="center_vertical"
        android:text="@string/stroke_title_create"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerInItemStroke"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageNewInItemStroke"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"/>
</RelativeLayout>
