<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.VSearchAttraction"
    android:background="@color/colorWhiteForFFFFFF">
    <View
        android:id="@+id/viewBarTopInPlaceList"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:gravity="center_vertical"
        android:textSize="20sp"
        android:layout_below="@+id/textBackInPlaceList"
        android:background="@color/colorWhiteForD9D9D9"/>
    <TextView
        android:id="@+id/textSearchInPlaceList"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_toEndOf="@+id/textBackInPlaceList"
        android:layout_toStartOf="@+id/imageMapInPlaceList"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:gravity="center_vertical"
        android:textSize="20sp"
        android:layout_marginTop="8dp" />
    <TextView
        android:id="@+id/textBackInPlaceList"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="@string/global_back"
        android:textSize="16sp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"/>
    <ImageView
        android:id="@+id/imageMapInPlaceList"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:contentDescription="@string/content_description"
        android:src="@drawable/list_m_v11"
        android:padding="14dp"/>
    <ImageView
        android:id="@+id/imageSettingInPlaceList"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@+id/textSearchInPlaceList"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:contentDescription="@string/content_description"
        android:src="@drawable/search_setting_v11"
        android:padding="4dp"/>
    <TextView
        android:id="@+id/textTag1InPlaceList"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_alignTop="@+id/imageSettingInPlaceList"
        android:layout_toEndOf="@+id/imageSettingInPlaceList"
        android:layout_marginStart="16dp"
        android:background="@drawable/bg_gray_2_surround"
        android:gravity="center"
        android:text="@string/search_title_distance"
        android:maxLines="1"
        android:ellipsize="end"/>
    <TextView
        android:id="@+id/textTag2InPlaceList"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_alignTop="@+id/imageSettingInPlaceList"
        android:layout_toEndOf="@+id/textTag1InPlaceList"
        android:layout_marginStart="8dp"
        android:background="@drawable/bg_gray_2_surround"
        android:gravity="center"
        android:text="@string/search_title_open"
        android:maxLines="1"
        android:ellipsize="end"/>
    <TextView
        android:id="@+id/textTag3InPlaceList"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_alignTop="@+id/imageSettingInPlaceList"
        android:layout_toEndOf="@+id/textTag2InPlaceList"
        android:layout_marginStart="8dp"
        android:gravity="center"
        android:background="@drawable/bg_gray_2_surround"
        android:text="@string/search_title_top"
        android:maxLines="1"
        android:ellipsize="end"/>
    <View
        android:id="@+id/viewBarInPlaceList"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/textSearchInPlaceList"
        android:layout_marginTop="62dp"
        android:background="@color/colorWhiteForD9D9D9"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerInPlaceList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/viewBarInPlaceList"
        android:layout_marginTop="8dp"/>
</RelativeLayout>