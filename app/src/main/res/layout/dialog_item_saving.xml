<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <ProgressBar
        android:id="@+id/progressInItemAdding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"/>
    <TextView
        android:id="@+id/textInItemAdding"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignTop="@+id/progressInItemAdding"
        android:layout_alignBottom="@+id/progressInItemAdding"
        android:layout_toEndOf="@+id/progressInItemAdding"
        android:text="Now Saving..."
        android:gravity="center_vertical"
        android:textSize="20sp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"/>
</RelativeLayout>
