<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <View
        android:id="@+id/viewPointInItemTransaction"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:id="@+id/textDateInItemTransaction"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:layout_toStartOf="@+id/viewPointInItemTransaction"
        android:gravity="center_vertical"/>
    <TextView
        android:id="@+id/textNameInItemTransaction"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/textDateInItemTransaction"
        android:layout_toStartOf="@+id/viewPointInItemTransaction"
        android:gravity="center_vertical"
        android:textSize="16sp"/>
    <TextView
        android:id="@+id/textTypeInItemTransaction"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:layout_toEndOf="@+id/viewPointInItemTransaction"
        android:gravity="center_vertical|end"
        android:textSize="12sp"/>
    <TextView
        android:id="@+id/textCashInItemTransaction"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/textTypeInItemTransaction"
        android:layout_toEndOf="@+id/viewPointInItemTransaction"
        android:gravity="end|center_vertical"
        android:textSize="16sp"/>
    <View
        android:id="@+id/viewPepperInItemTransaction"
        android:layout_width="match_parent"
        android:layout_height="55dp"/>
</RelativeLayout>
