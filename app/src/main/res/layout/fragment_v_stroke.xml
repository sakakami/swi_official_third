<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.VStroke">
    <View
        android:id="@+id/viewTitleInStroke"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        android:layout_toStartOf="@+id/imageAddInStroke"
        android:layout_marginEnd="8dp"/>
    <TextView
        android:id="@+id/textBackInStroke"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/viewTitleInStroke"
        android:layout_marginStart="8dp"
        android:text="@string/global_back"
        android:gravity="center"
        android:textSize="16sp"/>
    <ImageView
        android:id="@+id/imageAddInStroke"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:contentDescription="@string/content_description"
        android:layout_alignTop="@+id/viewTitleInStroke"
        android:layout_alignParentEnd="true"
        android:src="@drawable/add_v1_2"
        android:padding="12dp"/>
    <ImageView
        android:id="@+id/imageCancelInStroke"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/viewTitleInStroke"
        android:layout_alignEnd="@+id/viewTitleInStroke"
        android:padding="14dp"
        android:contentDescription="@string/content_description"
        android:src="@drawable/delete_on" />
    <EditText
        android:id="@+id/editSearchInStroke"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="8dp"
        android:layout_toStartOf="@+id/imageCancelInStroke"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:textSize="16sp"
        android:imeOptions="actionSearch"
        android:maxLines="1"
        android:inputType="text"
        android:background="@android:color/transparent"/>
    <TextView
        android:id="@+id/textTitleInStroke"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="4dp"
        android:layout_alignEnd="@+id/viewTitleInStroke"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:textSize="16sp"
        android:gravity="center_vertical"
        android:visibility="gone"/>
    <View
        android:id="@+id/viewBarInStroke"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorWhiteForD9D9D9"
        android:layout_below="@+id/textBackInStroke"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerInStroke"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/viewTitleInStroke" />
</RelativeLayout>