<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textTitleInInfoHolder"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:textColor="@color/colorWord"
        android:gravity="center_vertical"
        android:textSize="16sp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:background="@color/colorBlue"/>

    <include layout="@layout/layout_item_head"/>

    <include layout="@layout/layout_item_goods_tag"/>

    <include layout="@layout/layout_item_goods_info"/>

    <include layout="@layout/layout_item_net_tag"/>

    <include layout="@layout/layout_item_attraction_info"/>

    <include layout="@layout/layout_item_introduce"/>

    <include layout="@layout/layout_item_media_info"/>

    <include layout="@layout/layout_item_message_head"/>

    <include layout="@layout/layout_item_message_body"/>

    <include layout="@layout/layout_item_message_end"/>

</RelativeLayout>
