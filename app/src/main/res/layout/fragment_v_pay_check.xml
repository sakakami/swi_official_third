<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.VPayCheck">

    <TextView
        android:id="@+id/textTitleInPayCheck"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="付款確認"
        android:textSize="20sp"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"/>
    <View
        android:id="@+id/viewBarAInPayCheck"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_below="@+id/textTitleInPayCheck"
        android:background="@color/colorGrayForB5B5B5"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="80dp"/>
    <TextView
        android:id="@+id/textTypeInPayCheck"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/viewBarAInPayCheck"
        android:layout_marginTop="16dp"
        android:text="碳幣支付"
        android:textSize="20sp"
        android:gravity="center_vertical"
        android:paddingStart="64dp"
        android:paddingEnd="64dp"/>
    <TextView
        android:id="@+id/textNameInPayCheck"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/textTypeInPayCheck"
        android:textSize="20sp"
        android:gravity="center_vertical"
        android:paddingStart="32dp"
        android:paddingEnd="32dp"/>
    <TextView
        android:id="@+id/textCashInPayCheck"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/textNameInPayCheck"
        android:textSize="20sp"
        android:gravity="center"
        android:textStyle="bold"/>
    <View
        android:id="@+id/viewBarBInPayCheck"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_below="@id/textCashInPayCheck"
        android:background="@color/colorGrayForB5B5B5"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"/>
    <TextView
        android:id="@+id/textPayInPayCheck"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:background="@color/colorGreenFor96E7A5"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@color/colorWhiteForFFFFFF"
        android:gravity="center"/>

</RelativeLayout>