<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/textTitleInItemStroke"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:gravity="center_vertical"
        android:textSize="16sp"
        android:layout_marginTop="8dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_toStartOf="@+id/imageAInItemStroke"/>
    <ImageView
        android:id="@+id/imageAInItemStroke"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:contentDescription="@string/content_description"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="8dp"
        android:padding="8dp"
        android:layout_marginTop="4dp"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerInItemStroke"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_below="@+id/textTitleInItemStroke"
        android:layout_marginTop="4dp"/>
    <TextView
        android:id="@+id/textPlaceInItemStroke"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:gravity="center_vertical"
        android:layout_below="@+id/recyclerInItemStroke"
        android:layout_marginTop="16dp"
        android:layout_marginStart="8dp" />
    <TextView
        android:id="@+id/textCountInItemStroke"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:gravity="center_vertical"
        android:layout_below="@+id/textPlaceInItemStroke"
        android:layout_marginStart="8dp"/>
    <TextView
        android:id="@+id/textNameInItemStroke"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:gravity="center_vertical"
        android:layout_below="@+id/textCountInItemStroke"
        android:layout_marginStart="8dp"/>
    <View
        android:id="@+id/viewBarInItemStroke"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/recyclerInItemStroke"
        android:layout_alignBottom="@+id/textNameInItemStroke"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_below="@+id/viewBarInItemStroke"
        android:background="@color/colorWhiteForD9D9D9"
        android:layout_marginTop="4dp"/>
</RelativeLayout>
