<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/imageMarkInItemCreateAttraction"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:contentDescription="@string/content_description"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"/>
    <TextView
        android:id="@+id/textTitleInItemCreateAttraction"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_toEndOf="@+id/imageMarkInItemCreateAttraction"
        android:layout_marginTop="16dp"
        android:layout_marginStart="32dp"/>
    <EditText
        android:id="@+id/editMessageInItemCreateAttraction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textTitleInItemCreateAttraction"
        android:layout_marginEnd="16dp"
        android:layout_below="@+id/textTitleInItemCreateAttraction"
        android:layout_marginTop="16dp"/>
    <TextView
        android:id="@+id/textMessageInItemCreateAttraction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textTitleInItemCreateAttraction"
        android:layout_alignStart="@+id/textTitleInItemCreateAttraction"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"/>
    <View
        android:id="@+id/viewBarInItemCreateAttraction"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/textMessageInItemCreateAttraction"
        android:layout_alignStart="@+id/textMessageInItemCreateAttraction"
        android:layout_alignEnd="@+id/textMessageInItemCreateAttraction"
        android:background="@color/colorGray"/>
    <TextView
        android:id="@+id/textTimeAInItemCreateAttraction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textTitleInItemCreateAttraction"
        android:layout_alignStart="@id/textTitleInItemCreateAttraction"
        android:layout_marginTop="16dp"/>
    <TextView
        android:id="@+id/textTimeBInItemCreateAttraction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textTitleInItemCreateAttraction"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/textTimeAInItemCreateAttraction"
        android:gravity="end"
        android:layout_marginTop="16dp"/>
    <TextView
        android:id="@+id/textCountInItemCreateAttraction"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_below="@+id/editMessageInItemCreateAttraction"
        android:layout_alignEnd="@+id/editMessageInItemCreateAttraction"
        android:gravity="center"
        android:text="150/150"
        android:layout_marginEnd="16dp"/>
    <CheckBox
        android:id="@+id/checkboxInItemCreateAttraction"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"/>
    <TextView
        android:id="@+id/textCheckMessageInItemCreateAttraction"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignTop="@+id/checkboxInItemCreateAttraction"
        android:layout_toEndOf="@+id/checkboxInItemCreateAttraction"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp"
        android:gravity="center_vertical"/>
    <ImageView
        android:id="@+id/imageAInItemCreateAttraction"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:contentDescription="@string/content_description"
        android:layout_below="@+id/textTitleInItemCreateAttraction"
        android:layout_alignStart="@+id/textTitleInItemCreateAttraction"
        android:layout_marginTop="16dp"/>
    <ImageView
        android:id="@+id/imageBInItemCreateAttraction"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:contentDescription="@string/content_description"
        android:layout_alignTop="@+id/imageAInItemCreateAttraction"
        android:layout_toEndOf="@+id/imageAInItemCreateAttraction"
        android:layout_marginStart="8dp"/>
    <TextView
        android:id="@+id/textPhotoCountInItemCreateAttraction"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_below="@+id/imageAInItemCreateAttraction"
        android:layout_alignStart="@+id/imageAInItemCreateAttraction"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="+6 PHOTOS"/>
</RelativeLayout>
