<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/layoutMessageHeadPhoto"
    android:background="@color/colorWhiteForFFFFFF"
    android:visibility="gone">
    <ImageView
        android:id="@+id/imagePhotoInMessageHeadPhoto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:contentDescription="@string/content_description"
        android:scaleType="centerInside"/>
    <TextView
        android:id="@+id/textCountInMessageHeadPhoto"
        android:layout_width="50dp"
        android:layout_height="20dp"
        android:gravity="center"
        android:textColor="@color/colorWhiteForFFFFFF"
        android:layout_alignTop="@+id/imagePhotoInMessageHeadPhoto"
        android:layout_marginTop="8dp"
        android:layout_alignEnd="@+id/imagePhotoInMessageHeadPhoto"
        android:layout_marginEnd="8dp"
        android:background="@color/colorBlackFor66000000" />
    <TextView
        android:id="@+id/textTagAInMessageHeadPhoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imagePhotoInMessageHeadPhoto"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp" />
</RelativeLayout>
