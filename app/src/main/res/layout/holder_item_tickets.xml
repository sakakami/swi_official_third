<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imagePhotoInItemTickets"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:scaleType="center"
        app:srcCompat="@drawable/none_1" />
    <TextView
        android:id="@+id/textNameInItemTickets"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_toEndOf="@+id/imagePhotoInItemTickets"
        android:layout_marginStart="8dp"
        android:gravity="center_vertical"
        android:textSize="16sp"/>
    <TextView
        android:id="@+id/textMessageInItemTickets"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@+id/textNameInItemTickets"
        android:layout_alignStart="@+id/textNameInItemTickets"
        android:gravity="center_vertical"
        android:text="剩餘89天"
        android:textSize="16sp"/>
    <View
        android:id="@+id/viewPepperInItemTickets"
        android:layout_width="match_parent"
        android:layout_height="150dp"/>

</RelativeLayout>
