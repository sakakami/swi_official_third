<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/imagePhotoInItemMore"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:padding="16dp"
        android:contentDescription="@string/content_description"/>
    <TextView
        android:id="@+id/textTitleInItemMore"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_alignEnd="@+id/imagePhotoInItemMore"
        android:layout_below="@+id/imagePhotoInItemMore"
        android:gravity="center"
        android:textColor="@color/colorWhiteForFFFFFF"/>
    <TextView
        android:id="@+id/textSubInItemMore"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_alignEnd="@+id/imagePhotoInItemMore"
        android:layout_below="@+id/textTitleInItemMore"
        android:gravity="center"
        android:textColor="@color/colorWhiteForFFFFFF"
        android:visibility="gone"/>
</RelativeLayout>
