<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.VPersonalSteaming">
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerInPersonalSteaming"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <View
        android:id="@+id/viewBarInPersonalSteaming"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/colorWhiteForE0E0E0"
        android:visibility="invisible"/>
    <TextView
        android:id="@+id/textBackInPersonalSteaming"
        android:layout_width="50dp"
        android:layout_height="60dp"
        android:gravity="center"
        android:textSize="16sp"
        android:text="@string/global_back"/>
    <TextView
        android:id="@+id/textTitleInPersonalSteaming"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginEnd="50dp"
        android:layout_marginStart="50dp"
        android:gravity="center"
        android:visibility="invisible"
        android:textStyle="bold"
        android:textSize="24sp" />
</FrameLayout>