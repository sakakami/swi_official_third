<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.VExchangeCheck">

    <TextView
        android:id="@+id/textTitleInExchangeCheck"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="兌換卷"
        android:gravity="center"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/textBackInExchangeCheck"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="@string/global_back"
        android:gravity="center"
        android:textSize="20sp"/>

    <ImageView
        android:id="@+id/imageHomeInExchangeCheck"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:padding="8dp"
        android:scaleType="centerInside"
        app:srcCompat="@drawable/btn_home_2x" />

    <ImageView
        android:id="@+id/imagePhotoInExchangeCheck"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/textTitleInExchangeCheck"
        android:layout_marginTop="8dp"
        android:scaleType="center"
        app:srcCompat="@drawable/none_1"
        android:layout_marginStart="16dp"/>

    <TextView
        android:id="@+id/textNameInExchangeCheck"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_toEndOf="@+id/imagePhotoInExchangeCheck"
        android:layout_alignTop="@+id/imagePhotoInExchangeCheck"
        android:layout_marginStart="8dp"
        android:text="Item A"
        android:textSize="16sp"
        android:gravity="center_vertical"/>

    <TextView
        android:id="@+id/textCostInExchangeCheck"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@+id/textNameInExchangeCheck"
        android:layout_toEndOf="@+id/imagePhotoInExchangeCheck"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="40"
        android:textSize="16sp"
        android:gravity="center_vertical"/>

    <Spinner
        android:id="@+id/spinnerInExchangeCheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textCostInExchangeCheck"
        android:layout_toEndOf="@+id/imagePhotoInExchangeCheck"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"/>

    <View
        android:id="@+id/viewBarAInExchangeCheck"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_below="@+id/imagePhotoInExchangeCheck"
        android:layout_marginTop="16dp"
        android:background="@color/colorWhiteForD0D0D0"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"/>

    <TextView
        android:id="@+id/textTitleBInExchangeCheck"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@+id/viewBarAInExchangeCheck"
        android:text="付款資訊"
        android:gravity="center"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"/>

    <View
        android:id="@+id/viewBarBInExchangeCheck"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/colorWhiteForD0D0D0"
        android:layout_below="@+id/textTitleBInExchangeCheck"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"/>

    <TextView
        android:id="@+id/textMessageInExchangeCheck"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="請確認您的訂購金額"
        android:layout_below="@+id/viewBarBInExchangeCheck"
        android:gravity="center"
        android:textSize="16sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp" />
    <TextView
        android:id="@+id/textConfirmInExchangeCheck"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:text="確認"
        android:gravity="center"
        android:textSize="16sp"
        android:layout_below="@+id/textMessageInExchangeCheck"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bg_gray_2_surround"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/textCostTitleInExchangeCheck"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="單價"
        android:textSize="16sp"
        android:gravity="center"
        android:layout_below="@+id/viewBarBInExchangeCheck"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/textCostContentInExchangeCheck"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="40"
        android:textSize="16sp"
        android:gravity="center"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="16dp"
        android:layout_alignTop="@+id/textCostTitleInExchangeCheck"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/textCountTitleInExchangeCheck"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="數量"
        android:textSize="16sp"
        android:gravity="center"
        android:layout_below="@+id/textCostTitleInExchangeCheck"
        android:layout_marginStart="16dp"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/textCountContentInExchangeCheck"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="2"
        android:textSize="16sp"
        android:gravity="center"
        android:layout_alignTop="@+id/textCountTitleInExchangeCheck"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="16dp"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/textTotalTitleInExchangeCheck"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@+id/textCountTitleInExchangeCheck"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="訂單合計金額"
        android:textSize="16sp"
        android:gravity="center"
        android:visibility="invisible"/>
    
    <TextView
        android:id="@+id/textTotalContentInExchangeCheck"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/textTotalTitleInExchangeCheck"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="16dp"
        android:text="80"
        android:textSize="16sp"
        android:gravity="center"
        android:visibility="invisible"/>
    
    <View
        android:id="@+id/viewBarCInExchangeCheck"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/colorWhiteForD0D0D0"
        android:layout_below="@+id/textTotalTitleInExchangeCheck"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"/>

    <TextView
        android:id="@+id/textExchangeInExchangeCheck"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/viewBarCInExchangeCheck"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/bg_green_full"
        android:text="兌換"
        android:textSize="16sp"
        android:textColor="@color/colorWhiteForFFFFFF"
        android:gravity="center"/>

</RelativeLayout>