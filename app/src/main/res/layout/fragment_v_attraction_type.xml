<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.VAttractionType">
    <View
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorWhiteForE0E0E0"/>
    <TextView
        android:id="@+id/textBackInAttractionType"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="@string/global_back"/>
    <TextView
        android:id="@+id/textTitleInAttractionType"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_toEndOf="@+id/textBackInAttractionType"
        android:layout_marginEnd="50dp"
        android:text="@string/create_choose_title"
        android:gravity="center"
        android:textSize="20sp"
        android:textStyle="bold"/>
    <View
        android:id="@+id/viewBarInAttractionType"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/textTitleInAttractionType"
        android:background="@color/colorGrayFor5F5F5F"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerInAttractionType"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/viewBarInAttractionType"/>
</RelativeLayout>