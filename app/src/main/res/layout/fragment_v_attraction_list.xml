<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.VAttractionList">
    <View
        android:id="@+id/viewBarInAttractionSelect"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorWhiteForE0E0E0"/>
    <TextView
        android:id="@+id/textBackInAttractionSelect"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="@string/global_back"
        android:gravity="center"/>
    <TextView
        android:id="@+id/textTitleInAttractionSelect"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_toEndOf="@+id/textBackInAttractionSelect"
        android:layout_marginEnd="50dp"
        android:gravity="center"
        android:text="@string/checkin_title"
        android:textSize="20sp"/>
    <View
        android:id="@+id/viewBarTopInAttractionSelect"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/textTitleInAttractionSelect"
        android:background="@color/colorGrayFor5F5F5F"/>
    <androidx.appcompat.widget.SearchView
        android:id="@+id/searchInAttractionSelect"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/viewBarTopInAttractionSelect"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/searchInAttractionSelect"
        android:background="@color/colorWhiteForD9D9D9"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerInAttractionSelect"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/searchInAttractionSelect"
        android:layout_marginTop="8dp"
        android:layout_above="@+id/textCreateInAttractionSelect"/>
    <TextView
        android:id="@+id/textCreateInAttractionSelect"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:gravity="center_vertical"
        android:text="@string/checkin_add"
        android:textColor="@color/colorWhiteForFBFBFB"
        android:background="@color/colorGrayFor5F5F5F"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"/>
    <ImageView
        android:id="@+id/imageCancelInAttractionSelect"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:contentDescription="@string/content_description"
        android:padding="4dp"
        android:src="@android:drawable/ic_menu_close_clear_cancel" />
</RelativeLayout>