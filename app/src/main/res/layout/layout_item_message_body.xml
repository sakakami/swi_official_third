<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/layoutMessageBody">
    <TextView
        android:id="@+id/textTagInMessageBody"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical"
        android:text="@string/tag"/>
    <RelativeLayout
        android:id="@+id/layoutGoodsInMessageBody"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textTagInMessageBody"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp">
        <TextView
            android:id="@+id/textCostInMessageBody"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:text="$11.99"/>
        <TextView
            android:id="@+id/textSillInMessageBody"
            android:layout_width="60dp"
            android:layout_height="20dp"
            android:layout_below="@+id/textCostInMessageBody"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:textColor="	#00db00"
            android:text="In Stock."/>
        <TextView
            android:id="@+id/textSillDetailInMessageBody"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textSillInMessageBody"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical"
            android:text="@string/permission"/>
        <ImageView
            android:id="@+id/imagePermissionInMessageBody"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_below="@+id/textSillDetailInMessageBody"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:contentDescription="@string/content_description"
            app:srcCompat="@drawable/license" />
        <TextView
            android:id="@+id/textPermissionInMessageBody"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_below="@+id/imagePermissionInMessageBody"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"
            android:gravity="center"
            android:text="CC0 License"/>
        <TextView
            android:id="@+id/textPermissionDetailInMessageBody"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textPermissionInMessageBody"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical"
            android:text="@string/message"/>
        <TextView
            android:id="@+id/textPermissionLinkInMessageBody"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_below="@+id/textPermissionDetailInMessageBody"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:gravity="center_vertical"
            android:text="Learn more about the license"/>
        <TextView
            android:id="@+id/textOkInMessageBody"
            android:layout_width="160dp"
            android:layout_height="30dp"
            android:layout_below="@+id/textPermissionLinkInMessageBody"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:background="@drawable/bg_red_full"
            android:textColor="@color/colorWhiteForWord"
            android:text="我要認養"/>
    </RelativeLayout>
    <ImageView
        android:id="@+id/imageMessageInMessageBody"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@+id/layoutGoodsInMessageBody"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:padding="4dp"
        android:contentDescription="@string/content_description"
        app:srcCompat="@drawable/comment_v1_1" />
    <ImageView
        android:id="@+id/imageShareInMessageBody"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignTop="@+id/imageMessageInMessageBody"
        android:layout_marginStart="8dp"
        android:layout_toEndOf="@+id/imageMessageInMessageBody"
        android:contentDescription="@string/content_description"
        android:padding="5dp"
        app:srcCompat="@drawable/share_v1_1" />
    <ImageView
        android:id="@+id/imageLoveInMessageBody"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignTop="@+id/imageMessageInMessageBody"
        android:layout_marginStart="8dp"
        android:layout_toEndOf="@+id/imageShareInMessageBody"
        android:contentDescription="@string/content_description"
        android:padding="4dp"
        app:srcCompat="@drawable/sub_2_v1_1" />
    <ImageView
        android:id="@+id/imageBadInMessageBody"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/imageMessageInMessageBody"
        android:layout_marginEnd="16dp"
        android:contentDescription="@string/content_description"
        android:padding="6dp"
        app:srcCompat="@drawable/like_v1_1" />
    <TextView
        android:id="@+id/textCountInMessageBody"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_toStartOf="@+id/imageBadInMessageBody"
        android:layout_alignTop="@+id/imageMessageInMessageBody"
        android:layout_marginEnd="8dp"
        android:gravity="center"
        android:text="0"/>
    <ImageView
        android:id="@+id/imageGoodInMessageBody"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignTop="@+id/imageMessageInMessageBody"
        android:layout_marginEnd="8dp"
        android:layout_toStartOf="@+id/textCountInMessageBody"
        android:contentDescription="@string/content_description"
        android:padding="6dp"
        app:srcCompat="@drawable/unlike_v1_1" />
</RelativeLayout>
