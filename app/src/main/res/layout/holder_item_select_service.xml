<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <View
        android:id="@+id/viewBarInItemSelectService"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@drawable/bg_gray_2_surround"/>
    <ImageView
        android:id="@+id/imageHeadInItemSelectService"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="8dp"
        android:contentDescription="@string/content_description"
        app:srcCompat="@drawable/add_v1_1"
        android:padding="8dp"/>
    <TextView
        android:id="@+id/textContentInItemSelectService"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_toEndOf="@+id/imageHeadInItemSelectService"
        android:gravity="center_vertical"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"/>
    <View
        android:id="@+id/viewBar2InItemSelectService"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/colorWhiteForE8EBEF"
        android:layout_marginTop="15dp"/>
</RelativeLayout>
