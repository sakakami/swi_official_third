<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.VShowTicket">

    <TextView
        android:id="@+id/textTitleInShowTicket"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="我的兌換卷"
        android:textSize="20sp"
        android:gravity="center"/>
    <TextView
        android:id="@+id/textBackInShowTicket"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="@string/global_back"
        android:textSize="20sp"
        android:gravity="center"/>

    <ImageView
        android:id="@+id/imagePhotoInShowTicket"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@+id/textTitleInShowTicket"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:scaleType="center"
        app:srcCompat="@drawable/none_1" />
    <ImageView
        android:id="@+id/imageCodeInShowTicket"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@+id/imagePhotoInShowTicket"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"/>
    <TextView
        android:id="@+id/textNumberInShowTicket"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@+id/imageCodeInShowTicket"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:textSize="16sp"
        android:gravity="center_vertical"/>

</RelativeLayout>