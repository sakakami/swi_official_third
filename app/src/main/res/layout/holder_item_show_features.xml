<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/imageHeadInItemShowFeatures"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="8dp"
        android:contentDescription="@string/content_description"
        android:padding="8dp"
        android:src="@drawable/check_a_v1_1"/>
    <TextView
        android:id="@+id/textContentInItemShowFeatures"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_toEndOf="@+id/imageHeadInItemShowFeatures"
        android:gravity="center_vertical"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:maxLines="1"
        android:ellipsize="end"/>
    <View
        android:id="@+id/viewBarInItemShowFeatures"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/colorWhiteForE8EBEF"
        android:layout_marginTop="15dp"/>
</RelativeLayout>
