<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.VExchangeFinish">

    <View
        android:id="@+id/viewBarInExchangeFinish"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#101E4A" />

    <ImageView
        android:id="@+id/imageBackInExchangeFinish"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/delete_on"
        android:layout_alignParentEnd="true"
        android:padding="12dp"/>

    <ImageView
        android:id="@+id/imagePhotoInExchangeFinish"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:layout_below="@+id/viewBarInExchangeFinish"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:scaleType="center"
        app:srcCompat="@drawable/none_1" />

    <TextView
        android:id="@+id/textMessageInExchangeFinish"
        android:layout_width="170dp"
        android:layout_height="30dp"
        android:layout_below="@+id/imagePhotoInExchangeFinish"
        android:layout_centerHorizontal="true"
        android:text="訂購完成"
        android:gravity="center"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/textMyExchangeInExchangeFinish"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/textMessageInExchangeFinish"
        android:layout_marginTop="80dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@color/colorGreenFor96E7A5"
        android:text="我的兌換卷"
        android:textSize="16sp"
        android:gravity="center"
        android:textColor="@color/colorWhiteForFFFFFF"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/textContinueInExchangeFinish"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/textMyExchangeInExchangeFinish"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:background="@drawable/bg_green_surround"
        android:text="繼續逛逛"
        android:textSize="16sp"
        android:gravity="center"
        android:textColor="@color/colorGreenFor96E7A5"/>

</RelativeLayout>