<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layoutItemFourEbike"
    android:background="@color/colorBlackFor99000000"
    android:elevation="20dp"
    android:visibility="gone">
    <View
        android:id="@+id/viewBarInItemFourEbike"
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_centerInParent="true"
        android:background="@drawable/bg_white_message_map_full"
        android:clickable="true"
        android:focusable="true"/>
    <TextView
        android:id="@+id/textTitleInItemFourEbike"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_alignTop="@+id/viewBarInItemFourEbike"
        android:layout_marginTop="16dp"
        android:textSize="26sp"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/textMessageInItemFourEbike"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/textTitleInItemFourEbike"
        android:layout_alignStart="@+id/viewBarInItemFourEbike"
        android:layout_alignEnd="@+id/viewBarInItemFourEbike"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:textSize="16sp"
        android:layout_marginTop="16dp"/>
    <TextView
        android:id="@+id/textRightInItemFourEbike"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_below="@+id/textMessageInItemFourEbike"
        android:layout_alignEnd="@+id/viewBarInItemFourEbike"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="24dp"
        android:text="@string/global_ok"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@color/colorWhiteForFFFFFF"
        android:background="@color/colorBlackFor000000" />
    <TextView
        android:id="@+id/textLeftInItemFourEbike"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_alignStart="@+id/viewBarInItemFourEbike"
        android:layout_below="@+id/textMessageInItemFourEbike"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:text="@string/global_cancel"
        android:textSize="18sp"
        android:textStyle="bold"
        android:background="@drawable/bg_white_buttom_surround"/>
</RelativeLayout>
